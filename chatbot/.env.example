# GitHub API settings
GITHUB_TOKEN=your_github_personal_access_token
GITHUB_USERNAME=your_github_username

# Server settings
PORT=3000
HOST=localhost
NODE_ENV=development

# Logging settings
LOG_LEVEL=info
LOG_FORMAT=text
LOG_TO_FILE=true
LOG_FILE_PATH=logs/app.log

# LLM Provider settings
LLM_PROVIDER=local # local, openai, ollama, api
LLM_API_KEY=your_api_key_if_using_openai
LLM_API_URL=http://localhost:11434/api/generate # For Ollama
LLM_MODEL_PATH=./models/model.gguf # For local GGUF models
LLM_MODEL_NAME=codellama # For Ollama